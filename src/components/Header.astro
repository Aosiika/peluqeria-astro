---
// Importaciones
---

<header class="w-full py-4 absolute top-0 left-0 z-30 bg-white/10 backdrop-blur-sm">
  <div class="container mx-auto px-4">
    <nav class="flex justify-between items-center">
      <!-- Logo o texto a la izquierda -->
      <div class="text-2xl font-semibold">
        <a href="/" class="text-white hover:text-fuchsia-300 transition-colors duration-300">BeautyHair</a>
      </div>
      
      <!-- Enlaces de navegación (escritorio) -->
      <div class="hidden md:flex gap-6">
        <a href="/" class="text-white opacity-80 hover:opacity-100 hover:text-fuchsia-300 transition-all duration-300 relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-0 after:bg-fuchsia-400 after:transition-all hover:after:w-full">Inicio</a>
        <a href="#servicios" class="text-white opacity-80 hover:opacity-100 hover:text-fuchsia-300 transition-all duration-300 relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-0 after:bg-fuchsia-400 after:transition-all hover:after:w-full">Servicios</a>
        <a href="#about" class="text-white opacity-80 hover:opacity-100 hover:text-fuchsia-300 transition-all duration-300 relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-0 after:bg-fuchsia-400 after:transition-all hover:after:w-full">Sobre Nosotros</a>
        <a href="#equipo" class="text-white opacity-80 hover:opacity-100 hover:text-fuchsia-300 transition-all duration-300 relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-0 after:bg-fuchsia-400 after:transition-all hover:after:w-full">Equipo</a>
        <a href="#contacto" class="text-white opacity-80 hover:opacity-100 hover:text-fuchsia-300 transition-all duration-300 relative after:absolute after:bottom-0 after:left-0 after:h-[2px] after:w-0 after:bg-fuchsia-400 after:transition-all hover:after:w-full">Contacto</a>
      </div>
      
      <!-- Botón de menú móvil -->
      <button id="mobile-menu-button" class="md:hidden text-white">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>
    
    <!-- Menú móvil (oculto por defecto) -->
    <div id="mobile-menu" class="md:hidden hidden pt-4 pb-2 mt-2 bg-neutral-900/95 backdrop-blur-md rounded-lg absolute left-0 right-0 mx-4 z-50 shadow-xl border border-white/10">
      <div class="flex flex-col space-y-3 px-4">
        <a href="/" class="text-white py-2 border-b border-white/10">Inicio</a>
        <a href="#servicios" class="text-white py-2 border-b border-white/10">Servicios</a>
        <a href="#sobre-nosotros" class="text-white py-2 border-b border-white/10">Sobre Nosotros</a>
        <a href="#galeria" class="text-white py-2 border-b border-white/10">Galería</a>
        <a href="#contacto" class="text-white py-2">Contacto</a>
      </div>
    </div>
  </div>
</header>

<script>
  // Funcionalidad para el menú móvil
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
    
    // Cerrar menú al hacer clic en un enlace
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
      });
    });
  }
</script>
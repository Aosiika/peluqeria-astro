---
// Importaciones
import Calendar from './icons/Calendar.astro';

// Obtener la fecha actual para el valor mínimo del input de fecha
const hoy = new Date().toISOString().split('T')[0];
---

<section id="contacto" class="py-16 md:py-24 relative overflow-hidden">
  
  <div class="container mx-auto px-4 relative z-10">
    <!-- Encabezado de sección -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 relative inline-block">
        Reserva tu Cita
        <span class="absolute -bottom-2 left-1/4 right-1/4 h-1 bg-fuchsia-500"></span>
      </h2>
      <p class="text-base md:text-lg max-w-2xl mx-auto opacity-80">
        Estamos deseando ayudarte a conseguir el look que siempre has soñado
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-12 gap-10 max-w-6xl mx-auto">
      <!-- Formulario de contacto (a la izquierda en desktop) -->
      <div class="md:col-span-7 order-1 md:order-1">
        <div class="bg-white/5 backdrop-blur-sm rounded-xl p-6 md:p-8 shadow-xl border border-white/10">
          <h3 class="text-2xl font-semibold mb-6">Solicitar una cita</h3>
          
          <form class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="nombre" class="block text-sm font-medium opacity-80 mb-1">Nombre completo</label>
                <input 
                  type="text" 
                  id="nombre" 
                  name="nombre" 
                  required 
                  class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all text-white"
                  placeholder="Tu nombre"
                />
              </div>
              
              <div>
                <label for="telefono" class="block text-sm font-medium opacity-80 mb-1">Teléfono</label>
                <input 
                  type="tel" 
                  id="telefono" 
                  name="telefono" 
                  required 
                  class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all text-white"
                  placeholder="Tu teléfono"
                />
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium opacity-80 mb-1">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required 
                class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all text-white"
                placeholder="Tu email"
              />
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="fecha" class="block text-sm font-medium opacity-80 mb-1">Fecha deseada</label>
                <div class="relative">
                  <input 
                    type="date" 
                    id="fecha" 
                    name="fecha" 
                    required 
                    min={hoy}
                    class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all text-white"
                  />
                </div>
              </div>
              
              <!-- Selector de hora (inicialmente oculto) -->
              <div id="horaContainer" class="hidden">
                <label for="hora" class="block text-sm font-medium opacity-80 mb-1">Hora</label>
                <select 
                  id="hora" 
                  name="hora" 
                  required 
                  class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all appearance-none text-white"
                >
                  <option value="" disabled selected class="bg-neutral-800 text-white">Selecciona una hora</option>
                  <!-- Las opciones se cargarán dinámicamente con JavaScript -->
                </select>
              </div>
              
              <div>
                <label for="servicio" class="block text-sm font-medium opacity-80 mb-1">Servicio</label>
                <select 
                  id="servicio" 
                  name="servicio" 
                  required 
                  class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all appearance-none text-white"
                >
                  <option value="" disabled selected class="bg-neutral-800 text-white">Selecciona un servicio</option>
                  <option value="corte" class="bg-neutral-800 text-white">Corte y Peinado</option>
                  <option value="color" class="bg-neutral-800 text-white">Coloración</option>
                  <option value="tratamiento" class="bg-neutral-800 text-white">Tratamiento Capilar</option>
                  <option value="evento" class="bg-neutral-800 text-white">Peinado para Evento</option>
                </select>
              </div>
            </div>
            
            <div>
              <label for="mensaje" class="block text-sm font-medium opacity-80 mb-1">Mensaje (opcional)</label>
              <textarea 
                id="mensaje" 
                name="mensaje" 
                rows="4" 
                class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-fuchsia-500 focus:border-transparent transition-all resize-none text-white"
                placeholder="Cuéntanos más sobre lo que buscas..."
              ></textarea>
            </div>
            
            <button 
              type="submit" 
              class="w-full py-4 bg-fuchsia-600 text-white rounded-lg font-medium
                     shadow-lg shadow-fuchsia-600/30
                     hover:bg-fuchsia-500 hover:shadow-fuchsia-500/40 
                     transition-all duration-300 ease-in-out
                     flex items-center justify-center gap-2"
            >
              Solicitar Cita <Calendar width="20" height="20" />
            </button>
          </form>
        </div>
      </div>
      
      <!-- Información de contacto y redes sociales (a la derecha en desktop) -->
      <div class="md:col-span-5 order-2 md:order-2">
        <div class="bg-white/5 backdrop-blur-sm rounded-xl p-6 md:p-8 shadow-xl border border-white/10 h-full flex flex-col">
          <h3 class="text-2xl font-semibold mb-6">Información de contacto</h3>
          
          <div class="space-y-6 mb-8">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-fuchsia-500/20 flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-fuchsia-400">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-lg">Dirección</h4>
                <p class="opacity-70">Calle Principal 123, Madrid, España</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-fuchsia-500/20 flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-fuchsia-400">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-lg">Teléfono</h4>
                <p class="opacity-70">+34 912 345 678</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-fuchsia-500/20 flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-fuchsia-400">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-lg">Email</h4>
                <p class="opacity-70">info@beautyhair.com</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 rounded-full bg-fuchsia-500/20 flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-fuchsia-400">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-lg">Horario</h4>
                <ul class="space-y-1 mt-2">
                  <li class="opacity-70">Lunes: 9:00 - 18:30</li>
                  <li class="opacity-70">Martes: 9:00 - 18:30</li>
                  <li class="opacity-70">Miércoles: 9:00 - 18:30</li>
                  <li class="opacity-70">Jueves: 9:00 - 18:30</li>
                  <li class="opacity-70">Viernes: 9:00 - 18:30</li>
                  <li class="opacity-70">Sábados: 8:00 - 13:00</li>
                  <li class="opacity-70">Domingos: Cerrado</li>
                </ul>
              </div>
            </div>
          </div>
          
          <!-- Redes sociales -->
          <div class="mt-auto">
            <h4 class="font-semibold text-lg mb-4">Síguenos</h4>
            <div class="flex gap-4">
              <a 
                href="https://instagram.com" 
                target="_blank" 
                rel="noopener noreferrer" 
                class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center hover:bg-fuchsia-500/30 transition-colors duration-300"
                aria-label="Instagram"
